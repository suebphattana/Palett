generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id                 String           @id @default(cuid())
  name               String?
  email              String           @unique
  emailVerified      DateTime?
  image              String?
  password           String?
  role               String           @default("user")
  credits            Int              @default(10)
  stripeCustomerId   String?          @unique
  subscriptionId     String?          @unique
  subscriptionStatus String?
  plan               String           @default("free")
  createdAt          DateTime         @default(now())
  updatedAt          DateTime         @updatedAt
  accounts           Account[]
  images             GeneratedImage[]
  purchases          Purchase[]
  sessions           Session[]
  usageLogs          UsageLog[]

  @@index([email])
}

model GeneratedImage {
  id               String   @id @default(cuid())
  userId           String
  prompt           String
  negativePrompt   String?
  model            String
  imageUrl         String   // For images, this is image URL; for videos, this is video URL
  thumbnailUrl     String?
  width            Int
  height           Int
  seed             Int?
  steps            Int?
  guidance         Float?
  style            String?
  operation        String   @default("text-to-image") // text-to-image, text-to-video, image-to-video, image-edit, etc.
  originalImageUrl String?  // For image-to-image, image-to-video, image-edit operations
  duration         Int?     // Video duration in seconds (null for images)
  aspectRatio      String?  // Video aspect ratio (null for images)
  contentType      String   @default("image") // "image" or "video"
  metadata         Json?    // Store additional parameters
  isPublic         Boolean  @default(false)
  likes            Int      @default(0)
  createdAt        DateTime @default(now())
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@index([isPublic, createdAt])
  @@index([contentType, createdAt])
  @@index([operation, createdAt])
}

model Purchase {
  id                      String   @id @default(cuid())
  userId                  String
  creditsAdded            Int
  pricePaid               Int
  currency                String   @default("usd")
  stripeCheckoutSessionId String   @unique
  stripePaymentIntentId   String?  @unique
  status                  String   @default("pending")
  createdAt               DateTime @default(now())
  user                    User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model UsageLog {
  id           String   @id @default(cuid())
  userId       String
  operation    String
  creditsUsed  Int
  model        String
  success      Boolean  @default(true)
  errorMessage String?
  timestamp    DateTime @default(now())
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, timestamp])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
